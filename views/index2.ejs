<script>
  function makeReq (){
    const fullUrl = document.getElementById('fullurl').value;
    console.log(fullUrl)

    const xhr = new XMLHttpRequest();
    xhr.open('GET', 'https://api.shrtco.de/v2/shorten?url='+fullUrl, true)
    xhr.send();
    xhr.onload = ()=>{
      const json = JSON.parse(xhr.responseText);
      console.log(json)
      onclick= document.getElementById('hide').classList.remove('invisible');
      //document.getElementById('hide').innerHTML = JSON.stringify(json)
    }
  }




  function showup(){
  document.getElementById("hide").style.display = "inline";
  }
  document.getElementById("#shrink").addEventListener("click", showup)

  function copy() {
  var copyText = document.querySelector("#input");
  copyText.select();
  document.execCommand("copy");
}
document.querySelector("#copy").addEventListener("click", copy);

</script>
